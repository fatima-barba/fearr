<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Create.CreateEvents">



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/create_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/event_team_bar"/>

    <EditText
        android:id="@+id/eventName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:drawableStart="@drawable/icon_name"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/editTextEventName"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="182dp"
        app:layout_constraintBottom_toTopOf="@+id/create_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254"/>

    <EditText
        android:id="@+id/eventStart"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:drawableStart="@drawable/icon_start"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/editTextEventStart"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/create_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.376" />

    <EditText
        android:id="@+id/eventEnd"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/text_box"
        android:drawableStart="@drawable/icon_push"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="@string/editTextEventEnd"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/create_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/createEvent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/buttonCreateEvent"
        app:layout_constraintBottom_toTopOf="@+id/create_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventEnd"
        app:layout_constraintVertical_bias="0.205" />

</androidx.constraintlayout.widget.ConstraintLayout>